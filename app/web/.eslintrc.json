{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "camelcase": "off",
        "no-console": "off",
        "comma-dangle": ["error", "always-multiline"],
        "no-underscore-dangle": "off",
        "no-unneeded-ternary": "off",
        "max-len": ["error", { "code": 150 }],
        "no-restricted-syntax": "off"
    }
}
