<script>
    // Assuming you have your data available in this format
    const spendingByCategoryData = {
        labels: [<% for(let cat of grouped_spending) { %> '<%= cat.category %>', <% } %>],
        datasets: [{
            data: [<% for (let cat of grouped_spending) { %><%= cat.amount %>, <% } %>],
            backgroundColor: ['red', 'blue', 'yellow', 'green']
  }]
    };

    const ctx = document.getElementById('spendingByCategoryChart').getContext('2d');

    new Chart(ctx, {
        type: 'pie',
        data: spendingByCategoryData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                }
            }
        },
    });
</script>
