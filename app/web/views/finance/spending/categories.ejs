<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Categories</h6>
    </div>
    <!-- Card Body -->
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <!-- <th>Category</th> -->
                        <th>Outgoing</th>
                        <!-- <th>Actions</th> -->
                    </tr>
                </thead>
                <tbody>

                    <% for (let row of transactions) { %>
                    <tr>
                        <td>
                            <%= row.month %>
                        </td>
                        <td>
                            <a href="/agent?id=<%= row.agent_id %>"><%= row.counter_party %></a>
                        </td>
                        <td align="right"><%= formatCurrency(row.amount) %></td>
                        <td><% if (row.one_off) {%>one off<%} else if (row.essential) {%>essential<%} else {%>reg <%}%></td>
                                    <!--td>
                                        <a href="/transaction/update?id=<%= row.id %>&amp;action=one-off">One-off</a> |
                            <a href="/transaction/update?id=<%= row.id %>&amp;action=regular">regular</a> |
                            <a href="/transaction/update?id=<%= row.id %>&amp;action=essential">essential</a>
                            </td-->
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>