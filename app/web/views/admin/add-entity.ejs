<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h3>Add Entity</h3>
<form method="post" class="form-horizontal" role="form">
	<div class="col-6 mb-3">
		<label for="entity_name" class="form-label">Entity Name</label>
        <input type="text" name="entity_name" class="form-control" placeholder="Ecodan">
        <div class="form-text">The name of the device or service</div>
	</div>
    <div class="col-6 mb-3">
		<label for="entity_type" class="form-label">Entity Type</label>
        <input type="text" name="entity_type" class="form-control" placeholder="Smart Plug">
        <div class="form-text">The type of device or service (ie Smart Plug, Temperature Sensor, Light Switch)</div>
	</div>
    <div class="col-6 mb-3">
		<label for="entity_category" class="form-label">Entity Category</label>
        <input type="text" name="entity_category" class="form-control" placeholder="Heating">
        <div class="form-text">The category of device or service (ie heating, cooking, home entertainment)</div>
	</div>
    <div class="col-6 mb-3">
		<label for="entity_backend" class='form-label'>Entity Backend</label>
        <select name="entity_backend" class="form-select">
            <option value="">Select</option>
            <option value="api">API</option>
            <option value="tasmota_mqtt">Tasmota MQTT</option>
        </select>
        <div class="form-text">How is data for the device or service obtained</div>
	</div>
	<div class="col-6 mb-3">
		<label for="entity_url" class="form-label">URL (Optional)</label>
        <input type="url" name="entity_url" class="form-control">
        <div class="form-text">A reference URL to the product or service</div>
	</div>
	<div class="col-6 mb-3">
		<label for="entity_image" class="form-label">Image (Optional)</label>
        <input type="text" name="entity_image" class="form-control" placeholder="https://example.com/picture.png">
        <div class="form-text">An absolute or relative URL to a preview image of the device or service</div>
	</div>
	<div class="col-6 mb-3">
		<label for="entity_location" class="form-label">Location (Optional)</label>
        <input type="text" name="entity_location" class="form-control" placeholder="Kitchen">
        <div class="form-text">Where in the house the entity is located</div>
	</div>
	<input type="submit" value="Add Entity &raquo;" class="btn btn-primary">
</form>
