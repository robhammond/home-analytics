<div class="row mb-3">
    <div class="col-md-6">
        <h3>Data Import</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-auto">
        <table class="table table-bordered">
            <tr>
                <th>Provider</th>
                <th>API Details</th>
            </tr>
            <% for (let api of apis) { %>
                <tr>
                    <td><%= api.name %></td>
                    <td>
                        <table>
                            <% for (let cred of api.credentials) { %>
                                <tr>
                                    <td><%= cred.key %></td>
                                    <td>
                                        <form method="post">
                                            <input type="hidden" name="cred_id" value="<%= cred.id %>">
                                            <input type="text" value="<%= cred.value %>" name="value" class="form-control">
                                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                        </form>
                                        
                                    </td>
                                </tr>
                            <% } %>
                        </table>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>
</div>
