<h3>Devices</h3>

<div class="row">
    <div class="col-12">
        <a href="/admin/add-entity" class="btn btn-success float-end mb-3">Add Device</a>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for (let device of devices) { %>
                    <tr>
                        <td><%= device.entity_name %> <a href="<%= device.entity_url %>" target="_blank"><i class="fas fa-external-link"></i></a></td>
                        <td><%= device.entity_type %></td>
                        <td><%= device.entity_category %></td>
                        <td>
                            <a href="/admin/edit-entity?id=<%= device.id %>" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-entity?id=<%= device.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
</div>