<div class="carousel-item" data-bs-interval="10000">
    <div class="row">
        <div class="col-md-7">
            <h1>Month-to-Date</h1>
            <figure class="highcharts-figure" style="width:450px;height:350px;">
                <div id="mtd-container-kwh" class="chart-container"></div>
            </figure>
        </div>
        <div class="col-md-5">
            <div class="mtdCostBig text-center w-100 h-35 d-inline-block"></div>
            <div class="mtdCostCompare text-center w-100 h-65 d-inline-block"></div>
        </div>
    </div>
</div>

<script>
    
    async function loadMtdUsage(date1, date2) {
        const result = $.ajax({
            url: '/api/usage/sum',
            type: "GET",
            dataType: "json",
            data: {
                start: date1,
                end: date2
            },
            success: async function(res) {
                let kwh = Number(res["totals"]["kwh"].toFixed(0));
                let cost = Number(res["totals"]["cost"].toFixed(0));

                let lastMonth = await loadSums('<%= dates["minus1mStart"] %>', '<%= dates["minus1m"] %>');
                let lastYear = await loadSums('<%= dates["minus1yMonthStart"] %>', '<%= dates["minus1y"] %>');
                $('.mtdCostBig').html(`£${cost}`);
                $('.mtdCostCompare').html(`
                    <hr>
                    <span style="font-size:20px;color:#efefef;" class="pb-0">Last Month</span><br>
                    <span style="font-size:30px;color:#efefef;" class="pb-0">£${lastMonth['totals']['cost'].toFixed(0)}</span><br>
                    <hr>
                    <span style="font-size:20px;color:#efefef;" class="pb-0">Last Year</span><br>
                    <span style="font-size:30px;color:#efefef;" class="pb-0">£${lastYear['totals']['cost'].toFixed(0)}</span>`);

                let gaugeOptions = {
                    chart: {
                        type: 'solidgauge',
                        backgroundColor: 'black',
                    },
                    title: null,
                    pane: {
                        center: ['50%', '85%'],
                        size: '115%',
                        startAngle: -90,
                        endAngle: 90,
                        background: {
                            backgroundColor:
                                Highcharts.defaultOptions.legend.backgroundColor || '#EEE',
                            innerRadius: '60%',
                            outerRadius: '100%',
                            shape: 'arc'
                        }
                    },
                    tooltip: {
                        enabled: false
                    },
                    yAxis: {
                        stops: [
                            [0.1, '#55BF3B'], // green
                            [0.5, '#DDDF0D'], // yellow
                            [0.7, '#DF5353'] // red
                        ],
                        lineWidth: 0,
                        tickWidth: 0,
                        minorTickInterval: null,
                        tickAmount: 2,
                        title: {
                            y: -90
                        },
                        labels: {
                            y: 16
                        }
                    },
                    plotOptions: {
                        solidgauge: {
                            dataLabels: {
                                y: 5,
                                borderWidth: 0,
                                useHTML: true
                            }
                        }
                    },
                };
                let chartKwh = Highcharts.chart('mtd-container-kwh', Highcharts.merge(gaugeOptions, {
                    yAxis: {
                        min: 0,
                        max: 2000,
                        title: {
                            text: ''
                        }
                    },
                    credits: {
                        enabled: false
                    },
                    series: [{
                        name: 'kWh',
                        data: [kwh],
                        dataLabels: {
                            y: -110,
                            format:
                                '<div style="text-align:center">' +
                                '<span style="font-size:70px">{y}</span><br/>' +
                                '<span style="font-size:30px;opacity:0.8">kWh</span>' +
                                '</div>',
                            
                        },
                        tooltip: {
                            valueSuffix: ' kWh'
                        }
                    }]
                }));
            },
            error: function(xhr) {
                console.log(xhr);
            },
            cache: false
        });
    }

    async function loadSums(d1,d2) {
        const result = await $.ajax({
            url: '/api/usage/sum',
            type: "GET",
            dataType: "json",
            data: {
                start: d1,
                end: d2
            },
            success: async function(res) {
                let kwh = Number(res["totals"]["kwh"].toFixed(0));
                let cost = Number(res["totals"]["cost"].toFixed(0));
                // console.log(cost);
                return {kwh: kwh, cost: cost};
            },
            error: function(xhr) {
                console.log(xhr);
            },
            cache: false
        });
        return result;
    }
loadMtdUsage("<%= dates['thisMonthStart'] %>", "<%= dates['today'] %>");
</script>